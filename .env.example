# ============================================================================
# SCR Platform — Environment Variables
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================================

# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://scr_user:scr_password@localhost:5432/scr_platform
DATABASE_URL_SYNC=postgresql://scr_user:scr_password@localhost:5432/scr_platform

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# ── ElasticSearch ─────────────────────────────────────────────────────────────
ELASTICSEARCH_URL=http://localhost:9200

# ── Authentication (Clerk) ────────────────────────────────────────────────────
# Sign up free at https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ── AI Services ───────────────────────────────────────────────────────────────
# Anthropic (Claude) — https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your_key_here

# OpenAI (GPT-4o, Embeddings) — https://platform.openai.com
OPENAI_API_KEY=sk-your_key_here

# ── Vector Database (Pinecone) ────────────────────────────────────────────────
# Sign up free at https://www.pinecone.io
PINECONE_API_KEY=your_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=scr-platform

# ── File Storage (S3 or MinIO for local dev) ──────────────────────────────────
# For local development, we use MinIO (S3-compatible, runs in Docker)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET=scr-documents
AWS_S3_ENDPOINT_URL=http://localhost:9000
AWS_S3_REGION=us-east-1

# For production, use real AWS:
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_S3_BUCKET=scr-platform-documents
# AWS_S3_ENDPOINT_URL=  (leave empty for real AWS)
# AWS_S3_REGION=eu-west-1

# ── Email (Resend) ────────────────────────────────────────────────────────────
# Sign up free at https://resend.com (100 emails/day free)
RESEND_API_KEY=re_your_key_here
EMAIL_FROM=noreply@scrplatform.com

# ── Application ───────────────────────────────────────────────────────────────
APP_ENV=development
APP_DEBUG=true
API_URL=http://localhost:8000
AI_GATEWAY_URL=http://localhost:8001
FRONTEND_URL=http://localhost:3000
SECRET_KEY=change-this-to-a-random-string-in-production

# ── AI Gateway ────────────────────────────────────────────────────────────────
AI_GATEWAY_API_KEY=internal-dev-key-change-in-production
AI_DEFAULT_MODEL=claude-sonnet-4-20250514
AI_FALLBACK_MODEL=gpt-4o
AI_EMBEDDING_MODEL=text-embedding-3-large

# ── Error Monitoring (Sentry) ─────────────────────────────────────────────────
# Sign up free at https://sentry.io — create two projects: "scr-api" and "scr-web"
# Leave empty to disable Sentry (fine for local dev)
SENTRY_DSN=                      # Backend DSN: https://xxxxx@oXXX.ingest.sentry.io/YYYYY
NEXT_PUBLIC_SENTRY_DSN=          # Frontend DSN (can be same project or separate)
SENTRY_AUTH_TOKEN=               # Required for source map uploads: Settings > Auth Tokens
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=scr-api
NEXT_PUBLIC_APP_ENV=development  # Passed to Sentry as environment tag

# Celery Monitoring (Flower)
FLOWER_USER=admin
FLOWER_PASSWORD=changeme
