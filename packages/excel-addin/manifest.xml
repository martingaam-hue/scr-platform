<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="TaskPaneApp">

  <!-- ═══ Basic identity ══════════════════════════════════════════════════ -->
  <Id>a3f1c2e4-7b89-4d56-9a12-8e3f4c5d6b7a</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>SCR Platform</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="SCR Platform" />
  <Description DefaultValue="Pull live deal intelligence data from the SCR Platform directly into your Excel financial models." />

  <IconUrl DefaultValue="https://app.scrplatform.com/excel-addin/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://app.scrplatform.com/excel-addin/assets/icon-80.png" />

  <SupportUrl DefaultValue="https://docs.scrplatform.com/excel-addin" />

  <AppDomains>
    <AppDomain>https://api.scrplatform.com</AppDomain>
    <AppDomain>https://app.scrplatform.com</AppDomain>
  </AppDomains>

  <!-- ═══ Host requirements ════════════════════════════════════════════════ -->
  <Hosts>
    <Host Name="Workbook" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="ExcelApi" MinVersion="1.8" />
      <Set Name="CustomFunctionsRuntime" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <!-- ═══ Default task pane ════════════════════════════════════════════════ -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://app.scrplatform.com/excel-addin/taskpane.html" />
  </DefaultSettings>

  <!-- ═══ Permissions ══════════════════════════════════════════════════════ -->
  <Permissions>ReadDocument</Permissions>

  <!-- ═══ Version overrides (ribbon + custom functions) ════════════════════ -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Workbook">

        <!-- Custom functions runtime -->
        <Runtimes>
          <Runtime resid="CustomFunctions.Runtime.Url" lifetime="long" />
        </Runtimes>

        <AllFormFactors>
          <!-- Custom functions metadata -->
          <ExtensionPoint xsi:type="CustomFunctions">
            <Script>
              <SourceLocation resid="CustomFunctions.Script.Url" />
            </Script>
            <Page>
              <SourceLocation resid="CustomFunctions.Page.Url" />
            </Page>
            <Metadata>
              <SourceLocation resid="CustomFunctions.Metadata.Url" />
            </Metadata>
            <Namespace resid="CustomFunctions.Namespace" />
          </ExtensionPoint>
        </AllFormFactors>

        <DesktopFormFactor>
          <!-- Ribbon button that opens the task pane -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="ScrPlatform.Group">
                <Label resid="Group.Label" />
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16" />
                  <bt:Image size="32" resid="Icon.32x32" />
                  <bt:Image size="80" resid="Icon.80x80" />
                </Icon>
                <Control xsi:type="Button" id="ScrPlatform.TaskPaneButton">
                  <Label resid="TaskPane.Label" />
                  <Supertip>
                    <Title resid="TaskPane.Label" />
                    <Description resid="TaskPane.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="TaskPane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>

      </Host>
    </Hosts>

    <Resources>
      <!-- URLs -->
      <bt:Urls>
        <bt:Url id="TaskPane.Url"
                DefaultValue="https://app.scrplatform.com/excel-addin/taskpane.html" />
        <bt:Url id="CustomFunctions.Runtime.Url"
                DefaultValue="https://app.scrplatform.com/excel-addin/functions.html" />
        <bt:Url id="CustomFunctions.Script.Url"
                DefaultValue="https://app.scrplatform.com/excel-addin/functions.js" />
        <bt:Url id="CustomFunctions.Page.Url"
                DefaultValue="https://app.scrplatform.com/excel-addin/functions.html" />
        <bt:Url id="CustomFunctions.Metadata.Url"
                DefaultValue="https://app.scrplatform.com/excel-addin/functions.json" />
      </bt:Urls>

      <!-- Short strings -->
      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="SCR Platform" />
        <bt:String id="TaskPane.Label" DefaultValue="SCR Data" />
        <bt:String id="CustomFunctions.Namespace" DefaultValue="SCR" />
      </bt:ShortStrings>

      <!-- Long strings -->
      <bt:LongStrings>
        <bt:String id="TaskPane.Tooltip"
                   DefaultValue="Open the SCR Platform panel to configure your API key and insert live data formulas." />
      </bt:LongStrings>

      <!-- Icons -->
      <bt:Images>
        <bt:Image id="Icon.16x16"
                  DefaultValue="https://app.scrplatform.com/excel-addin/assets/icon-16.png" />
        <bt:Image id="Icon.32x32"
                  DefaultValue="https://app.scrplatform.com/excel-addin/assets/icon-32.png" />
        <bt:Image id="Icon.80x80"
                  DefaultValue="https://app.scrplatform.com/excel-addin/assets/icon-80.png" />
      </bt:Images>
    </Resources>

  </VersionOverrides>

</OfficeApp>
